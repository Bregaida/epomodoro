<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Pomodoro"
            id="epomodoro">
      </category>
      <view
            allowMultiple="false"
            category="epomodoro"
            class="net.mornati.epomodoro.views.TeamStatus"
            icon="icons/sample.gif"
            id="epomodoro.views.TeamStatus"
            name="Team Messages">
      </view>
      <view
            allowMultiple="false"
            category="epomodoro"
            class="net.mornati.epomodoro.views.CountDownTimer"
            id="epomodoro.views.CountDownTimer"
            name="CountDown Timer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="epomodoro.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
